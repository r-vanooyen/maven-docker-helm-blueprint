{
    "branches": "main",
    "plugins" : [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        "@semantic-release/git",
        [
            "@semantic-release/github",
            {
                "assets": [
                    {
                        "path" : "target/demo-.jar",
                        "label": "lib"
                    }
                ]
            }
        ],
        [
            "@semantic-release/exec",
            {
                "verifyConditionsCmd": "mvn verify",
                "publishCmd"         : "mvn deploy -DskipTests -DskipITs",
                "prepareCmd"         : "mvn versions:set -DnewVersion=${nextRelease.version}",
                "successCmd"         : "mvn versions:set -DnextSnapshot=true"
            }
        ],
        [
            "@semantic-release/exec",
            {
                "verifyConditionsCmd": "echo $HELM_PWD | helm login --username $HELM_USER --password-stdin $HELM_REGISTRY",
                "publishCmd"         : "helm push *.tgz $HELM_REGISTRY",
                "prepareCmd"         : "helm package --version ${nextRelease.version} --app-version ${nextRelease.version} charts",

            }
        ]
    ]
}
