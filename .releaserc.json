{
    "branches": "main",
    "plugins" : [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        "@semantic-release/github",
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "mvn -B versions:set -DnewVersion=${nextRelease.version}",
                "successCmd": "mvn -B versions:set -DnextSnapshot=true"
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "sed -i -e 's/version: .*/version: ${nextRelease.version}/' -e 's/appVersion: .*/appVersion: \"${nextRelease.version}\"/' charts/Chart.yaml",
                "successCmd": "mvn -q --non-recursive exec:exec | xargs -I {} sed -i -e 's/version: .*/version: {}/' -e 's/appVersion: .*/appVersion: \"{}\"/' charts/Chart.yaml"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "package.json",
                    "package-lock.json",
                    "charts/Chart.yaml",
                    "pom.xml"
                ]
            }
        ]
    ]
}
