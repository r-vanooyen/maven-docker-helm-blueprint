{
    "branches": "main",
    "plugins" : [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        "@semantic-release/git",
        [
            "@semantic-release/github",
            {
                "assets": [
                    {
                        "path" : "target/demo-.jar",
                        "label": "lib"
                    }
                ]
            }
        ],
        [
            "@semantic-release/exec",
            {
                "verifyConditionsCmd": "mvn verify",
                "prepareCmd"         : "mvn versions:set -DnewVersion=${nextRelease.version}",
                "publishCmd"         : "mvn deploy -DskipTests -DskipITs",
                "successCmd"         : "mvn versions:set -DnextSnapshot=true"
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd"         : "helm package --version ${nextRelease.version} --app-version ${nextRelease.version} charts",
                "publishCmd": "helm push *.tgz oci://ghcr.io/r-vanooyen/maven-docker-helm-blueprint"
            }
        ]
    ]
}
