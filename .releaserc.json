{
    "branches": "main",
    "plugins" : [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        "@semantic-release/github",
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "mvn versions:set -DnewVersion=${nextRelease.version}",
                "successCmd": "mvn versions:set -DnextSnapshot=true"
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "sed -i -e 's/version: .*/version: ${nextRelease.version}/' -e 's/appVersion: .*/appVersion: \"${nextRelease.version}\"/' charts/Chart.yaml",
                "successCmd": "xmllint --xpath \"//*[local-name()='project']/*[local-name()='version']/text()\" pom.xml | xargs -I {} sed -i -e 's/version: .*/version: {}/' -e 's/appVersion: .*/appVersion: \"{}\"/' charts/Chart.yaml"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    'CHANGELOG.md',
                    'package.json',
                    'package-lock.json',
                    "charts/Chart.yaml",
                    "pom.xml"
                ]
            }
        ]
    ]
}
